@model SliderEditVM
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<div class="container">
    <div class="card mt-4 w-100" style="display:flex;align-items:center;">
        <h3 class="card-header">Edit</h3>
        <div>
            <div class="image">
             <img src="~/img/@Model.Name" style="width:150px;height:100px;"/>
            </div>
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input asp-for="NewImage" class="form-control" >
                <span class="text-danger" asp-validation-for="NewImage"></span>
                <button type="submit" class="btn btn-success mt-5">Submit</button>
                <a asp-action="Index" asp-controller="Slider" class="btn btn-info mt-5">Cancel</a>
            </form>


        </div>
    </div>

</div>

